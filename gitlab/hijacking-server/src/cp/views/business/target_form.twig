{% macro target_form(id, type, content) %}
  <div class="form-group" style="border: 1px solid #aaaaaa; padding: 0px 10px;">
    <div class="col-lg-12" style="padding: 5px;">
      <label class="radio-inline">
        业务类型:
      </label>
      <label class="radio-inline">
        <input type="radio" name="Target[{{ id }}][type]" id="inlineRadio1" value="302" {% if type == 302 %}checked="checked"{% endif %}> 302转向
      </label>
      <label class="radio-inline">
        <input type="radio" name="Target[{{ id }}][type]" id="inlineRadio1" value="3021" {% if type == 3021 %}checked="checked"{% endif %}> 302去来源
      </label>
      <label class="radio-inline">
        <input type="radio" name="Target[{{ id }}][type]" id="inlineRadio1" value="3022" {% if type == 3022 %}checked="checked"{% endif %}> 302参数替换
      </label>
      <label class="radio-inline">
        <input type="radio" name="Target[{{ id }}][type]" id="inlineRadio2" value="200" {% if type == 200 %}checked="checked"{% endif %}> 200响应
      </label>
      <label class="radio-inline">
        <input type="radio" name="Target[{{ id }}][type]" id="inlineRadio3" value="2001" {% if type == 2001 %}checked="checked"{% endif %}> 200JS
      </label>
      <label class="radio-inline">
        <input type="radio" name="Target[{{ id }}][type]" id="inlineRadio4" value="600" {% if type == 600 %}checked="checked"{% endif %}> 600记录
      </label>
    </div>
    <div class="col-lg-12" style="padding: 5px;">
      <div class="col-lg-11" style="padding: 0px;">
        <textarea class='autoExpand form-control' rows='1' data-min-rows='1' name="Target[{{ id }}][content]" >{{ content }}</textarea>
      </div>
      <div class="col-lg-1">
        <button type="button" class="close" onclick="delTarget($(this))"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      </div>
    </div>
  </div>
{% endmacro %}
