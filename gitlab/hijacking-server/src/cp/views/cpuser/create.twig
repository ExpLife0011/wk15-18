{% set sidebar_name = "修改管理员" %}
{% set menu_name = "managers" %}
{% extends '@view/layouts/base.twig' %}
{% set title="修改管理员" %}
{% block body %}
<div class="content">
    <h3>修改密码</h3>
<div class="container">
{% include "@app/views/layouts/notice.twig" %}
    <div class="row">
        <div class="form">
            
            {% set form = ActiveForm.begin({'id':'create-form','options':{'enctype':'multipart/form-data','class':'form-horizontal'}}) %}
            {{ form.field(model,'username').textInput({'disabled':true})|raw }}
            {{ form.field(model,'password').passwordInput()|raw }}
            {#{ form.field(model,'email')|raw }#}
            <div class="form-group">
                        <input type='submit' value='提交' class='btn btn-large btn-primary' /> 
            </div>
            {{ void(form.end()) }}
        </div>
    </div>
</div>
</div>
</div>
{% endblock %}
